body {
    margin: 0 auto;
    line-height: 1.8;
    max-width: 1200px;
    background-color: #282828;
}

#content {
    margin-top: 70px;
    margin-bottom: 0px;
    background-color: white;
    min-height: 1000px;
}

.navbar {
    padding-top: 20px;
    margin-bottom: 0;
    background-color: #2f4f4f;
    z-index: 9999;
    border: 0;
    font-size: 14px !important;
    line-height: 1.42857143 !important;
    letter-spacing: 4px;
    border-radius: 0;
    font-family: Montserrat, sans-serif;
}

.navbar li a, .navbar .navbar-brand {
    color: #fff !important;
}

.navbar-nav li a:hover {
    color: #f4511e !important;
    background-color: #fff !important;
}
.navbar-nav li.active a {
    color: #6a63f4 !important;
    background-color: #fff !important;
}

.navbar-default .navbar-toggle {
    border-color: transparent;
    color: #fff !important;
}

#myCarousel {
    margin-top: 75px;
}

.carousel-control.right, .carousel-control.left {
    background-image: none;
    color: #000;
}

.carousel-indicators li {
    border-color: #f4511e;
    border-radius: 10px;
}

.carousel-indicators li.active {
    background-color: #f4511e;
}

.carousel-inner > .item > img,
.carousel-inner > .item > a > img {
    width: 70%;
    margin: auto;
    height: 250px;
}

.item h4 {
    font-size: 19px;
    line-height: 1.375em;
    font-weight: 400;
    font-style: italic;
    margin: 70px 0;
}

.item span {
    font-style: normal;
}

.blog {
    padding-top: 30px;
    border-bottom: 2px solid #ccc;
}

.linkDetail {
    color: #2f4f4f;
    font-size: 15px;
    padding-top: 20px;
    padding-bottom: 20px;

}

.blog a:hover {
    color: #f4511e;
}

.blog-content, .blog-header, .blog-title {
    padding-top: 5px;
    padding-bottom: 5px;
}
.blog-header span a{
    font-size: 13px;
}
.side{
    color: black;
    font-size: 15px;
}
.category ul li{
    list-style-type: none;
    padding-top: 20px;
    padding-bottom: 20px;
    border-bottom: 2px solid #ccc;
}

.category ul li span {
    background-color: #2f4f4f;
}

.category ul li a:hover {
    color: #f4511e;
}

footer {
    background-color: #2f4f4f;
    color: #fff;
    font-size: 12px;
}

.container-fluid {
    margin-top: 70px;
}

#back-to-top {
    display: none;
    position: fixed;
    right: 50px;
    bottom: 50px;
    cursor: pointer;
    z-index: 10000;
}
#pagenavi{
    padding-top: 30px;
}
.listAll ul li{
    margin-left: 50px;
    list-style-type: none;
    padding-top: 20px;
    padding-bottom: 10px;
    border-bottom: 2px solid #ccc;
}
.links ul li{
    margin-right: 200px;
    list-style-type: none;
    padding-top: 20px;
    padding-bottom: 20px;
    border-bottom: 2px solid #ccc ;
}
.navbar-inner{
    padding-top: 100px;
}
.contact {
    margin-right: 300px;
    padding-top: 20px;
    padding-bottom: 20px;
    border-bottom: 2px solid #ccc;
}